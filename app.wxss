/**app.wxss**/
view,
input,
picker,
cover-view,
scroll-view {
  box-sizing: border-box;
}

page {
  position: absolute;
  padding: 20rpx 30rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f5f5f5;
}