page {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}

page .section {
  width: 40vw;
  height: 20vw;
  margin-right: 4vw;
  margin-bottom: 4vw;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0px 1.6rpx 3.6rpx rgba(0, 0, 0, 0.13), 0px 0px 2.9rpx rgba(0, 0, 0, 0.11);
}

page .section:nth-child(2n) {
  margin-right: 0;
}
