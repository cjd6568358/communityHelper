page {
  padding: 0;
}

page .swiper-section .swiper-item image {
  width: 100%;
  height: 300rpx;
  vertical-align: bottom;
}

page .swiper-section,
page .tool-section,
page .info-section {
  margin-bottom: 20rpx;
  background-color: #fff;
}

page .tool-section,
page .info-section {
  display: flex;
  flex-wrap: wrap;
  padding: 0 4vw 5vw;
}

page .tool-section .item,
page .info-section .item {
  width: 28vw;
  text-align: center;
  margin-right: 4vw;
  margin-top: 4vw;
  padding: 20rpx;
  border: 1rpx solid #2b91fd;
  border-radius: 20rpx;
  color: #666;
}

page .tool-section .item:nth-child(3n),
page .info-section .item:nth-child(3n) {
  margin-right: 0;
}
